<div class="row">
  <div class="col-md-6">
    <%= form_for(@photo) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title,  class: 'form-control', placeholder: 'Wpisz tytuł'  %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description,  class: 'form-control', placeholder: 'Podaj opis zdjęcia' %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image,  class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit "Zapisz zdjęcie", class: 'btn btn-primary' %>

    </div>



    <% end %>
  </div>

</div>
